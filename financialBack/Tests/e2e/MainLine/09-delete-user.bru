meta {
  name: Delete User
  type: http
  seq: 9
}

delete {
  url: http://localhost:{{port}}/User/{{userId}}
  body: none
  auth: none
}

assert {
  res.status: eq 204
}

script:post-response {
  if (res.status !== 200) {
    console.error("‚ùå [DELETE USER] Failed with status:", res.status);
    console.error("User ID used:", bru.getVar("userId"));
    console.error("Response body:", JSON.stringify(res.body, null, 2));
  } else {
    console.log("‚úÖ [DELETE USER] Success!");
    console.log("Deleted User ID:", bru.getVar("userId"));
    console.log("üéâ [E2E TEST] All cleanup completed successfully!");
  }
}
